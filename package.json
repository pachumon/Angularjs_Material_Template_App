{
  "name": "app_bundling_webpack",
  "version": "1.0.0",
  "description": "a simple typescript based app to try out application bundling using webpack",
  "main": "index.js",
  "scripts": {
    "view:app": "live-server --open=./build --browser=chrome",
    "clean:folder": "del-cli dist build",
    "clean:js": "del-cli dist/**/*.js dist/**/*.map",
    "build:tsc": "npm run clean:js && tsc",
    "build:app": "npm run build:prod && npm run view:app",
    "build:devsvr": "npm run clean:folder && webpack-dev-server --inline --env.env=dev",
    "build:prod": "npm run build -- --env.env=prod",
    "build:dev": "npm run build -- --env.env=dev",
    "build": "npm run clean:folder && webpack"
  },
  "keywords": [
    "typescript",
    "bundling",
    "webpack"
  ],
  "author": "pachumon",
  "license": "ISC",
  "devDependencies": {
    "@types/angular": "^1.6.51",
    "@types/angular-material": "^1.1.61",
    "@types/jquery": "^3.3.1",
    "@types/lodash": "^4.14.107",
    "@types/webpack-env": "^1.13.6",
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "css-hot-loader": "^1.3.9",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "style-loader": "^0.21.0",
    "ts-loader": "^3.5.0",
    "typescript": "^2.8.1",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^3.3.0",
    "webpack-dev-server": "^2.5.1",
    "webpack-merge": "^4.1.2"
  },
  "dependencies": {
    "angular": "^1.7.5",
    "angular-animate": "^1.7.5",
    "angular-aria": "^1.7.5",
    "angular-material": "^1.1.10",
    "angular-messages": "^1.7.5",
    "bootstrap": "^3.3.7",
    "font-awesome": "^4.7.0",
    "jquery": "^3.3.1",
    "lodash": "^4.17.5"
  }
}
